<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is not required if you don't need any extra configuration. -->
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <navigation-rule>
        <navigation-case>
            <from-action>#{identity.login}</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{identity.logout}</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
		<from-view-id>/label.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{labelBean.loadLabel()}</from-action>
			<if>#{labelBean.label == null}</if>
			<to-view-id>/denied.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
    <navigation-rule>
		<from-view-id>/machine.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{machineBean.loadMachine}</from-action>
			<if>#{machineBean.machine == null}</if>
			<to-view-id>/denied.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
    <navigation-rule>
        <from-view-id>/user/reservation.xml</from-view-id>
        <navigation-case>
            <from-action>#{reservationBean.persist()}</from-action>
            <to-view-id>/user/reservations.xml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>